                <CategoryAxis fx:id="xAxis" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" />
            </yAxis>
        </BarChart>
        <RadioButton fx:id="year2010RadioButton" layoutX="127.0" layoutY="395.0" onAction="#handleYearRadioButtonChange" text="2010" />
        <RadioButton fx:id="year2020RadioButton" layoutX="222.0" layoutY="395.0" onAction="#handleYearRadioButtonChange" text="2020" />
        <Button layoutX="471.0" layoutY="391.0" mnemonicParsing="false" onAction="#showTableScene" text="View Table" />
      <Text layoutX="175.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="GDP Comparison Chart">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Text>
    </children>
</AnchorPane>
